#!/bin/bash

PATH=/var/www/html/kernel/
CURRENT=mirrors-current

([ -e $PATH ] && [ -e $CURRENT ]) || echo "ERROR"; exit 1;

for k in 2.6.8 2.6.16 2.6.18 2.6.20 2.6.22 2.6.24 2.6.26 2.6.27 2.6.32 rhel4-2.6.9 rhel5-2.6.18 rhel5-2.6.18-testing rhel6-2.6.32 rhel6-2.6.32-testing; do
	/bin/cat $CURRENT | /bin/awk '{ print $2 }' | \
	/bin/sed "s%$%kernel/branches/${k}/current/%" > $PATH/kernel/mirrors-${k}
done
